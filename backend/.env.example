DATABASE_URL="postgresql://username:password@localhost:5432/farmer_buyer_db?schema=public"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
PORT=5000

# Twilio WhatsApp Configuration
# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID="YOUR_TWILIO_SID"
TWILIO_AUTH_TOKEN="YOUR_TWILIO_AUTH_TOKEN"
TWILIO_WHATSAPP_NUMBER="YOUR_TWILIO_NUMBER"

# Development Mode - Redirect all messages to this number
# Format: +919876543210 (include country code)
DEV_TEST_NUMBER="YOUR_PHONE_NUMBER"

# Environment (set to 'production' to disable dev mode)
NODE_ENV="development"

# Google Gemini AI API Key (for Performance Summary)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# Departure Time Configuration (24-hour format)
# Default: 12 (12:00 PM / noon)
# Farmers cannot cancel bookings within 2 hours of this time
DEPARTURE_TIME_HOUR=12
