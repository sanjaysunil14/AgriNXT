// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BUYER
  FARMER
}

enum BookingStatus {
  PENDING      // Farmer created, awaiting assignment
  OPEN         // Available for buyer
  ROUTED       // Assigned to buyer route (SCHEDULED)
  COMPLETED    // Collection done
  CANCELLED    // Cancelled by farmer
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RouteStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
}

enum InvoiceStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentMode {
  CASH
  UPI
  BANK_TRANSFER
}

enum PaymentMethod {
  UPI
  BANK
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum Zone {
  NORTH
  SOUTH
  EAST
  WEST
}

enum VegetableStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            Int             @id @default(autoincrement())
  full_name     String
  phone_number  String          @unique
  email         String?         @unique
  location      String?
  password_hash String
  role          Role
  status        ApprovalStatus  @default(PENDING)
  is_active     Boolean         @default(true)
  
  // Buyer-specific fields
  business_name String?
  address       String?
  
  // Farmer-specific location fields (GPS coordinates)
  latitude      Float?
  longitude     Float?
  
  // Zone assignment for buyers and farmers
  zone          Zone?
  district      String?         // District name for farmers (Tamil Nadu)
  
  // Farmer payment details
  payment_method PaymentMethod?
  payment_value  String?
  
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt

  // Relations
  farmer_profile    FarmerProfile?
  buyer_routes      Route[]
  buyer_chits       CollectionChit[] @relation("BuyerChits")
  farmer_chits      CollectionChit[] @relation("FarmerChits")
  buyer_invoices    Invoice[]        @relation("BuyerInvoices")
  farmer_invoices   Invoice[]        @relation("FarmerInvoices")
  buyer_payments    Payment[]        @relation("BuyerPayments")
  farmer_payments   Payment[]        @relation("FarmerPayments")
  audit_logs        AuditLog[]       @relation("UserActions")
  audit_targets     AuditLog[]       @relation("TargetUser")
  vegetable_requests VegetableRequest[] @relation("VegetableRequests")

  @@map("users")
}

model AuditLog {
  id             Int      @id @default(autoincrement())
  user_id        Int?
  user_role      Role?
  action         String
  target_user_id Int?
  details        String?
  ip_address     String?
  created_at     DateTime @default(now())

  // Relations
  user        User? @relation("UserActions", fields: [user_id], references: [id], onDelete: SetNull)
  target_user User? @relation("TargetUser", fields: [target_user_id], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}

model FarmerProfile {
  id              Int             @id @default(autoincrement())
  user_id         Int             @unique
  village_name    String
  latitude        Float
  longitude       Float
  payment_method  PaymentMode     @default(CASH)
  approval_status ApprovalStatus  @default(PENDING)
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt

  // Relations
  user     User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@map("farmer_profiles")
}

model Booking {
  id                  Int           @id @default(autoincrement())
  farmer_id           Int
  date                DateTime
  vegetable_type      String?
  quantity_kg         Float?
  vegetables_summary  String?
  estimated_weight    Float?
  status              BookingStatus @default(PENDING)
  created_at          DateTime      @default(now())
  updated_at          DateTime      @updatedAt

  // Relations
  farmer        FarmerProfile  @relation(fields: [farmer_id], references: [id], onDelete: Cascade)
  route_stops   RouteStop[]
  booking_items BookingItem[]

  @@unique([farmer_id, date])
  @@map("bookings")
}

model BookingItem {
  id             Int     @id @default(autoincrement())
  booking_id     Int
  vegetable_type String
  quantity_kg    Float

  // Relations
  booking Booking @relation(fields: [booking_id], references: [id], onDelete: Cascade)

  @@map("booking_items")
}

model Route {
  id                 Int         @id @default(autoincrement())
  buyer_id           Int
  date               DateTime
  total_distance     Float       @default(0)
  estimated_duration Int?
  status             RouteStatus @default(PLANNED)
  created_at         DateTime    @default(now())
  updated_at         DateTime    @updatedAt

  // Relations
  buyer       User        @relation(fields: [buyer_id], references: [id], onDelete: Cascade)
  route_stops RouteStop[]

  @@map("routes")
}

model RouteStop {
  id             Int      @id @default(autoincrement())
  route_id       Int
  booking_id     Int
  sequence_order Int
  created_at     DateTime @default(now())

  // Relations
  route           Route            @relation(fields: [route_id], references: [id], onDelete: Cascade)
  booking         Booking          @relation(fields: [booking_id], references: [id], onDelete: Cascade)
  collection_chit CollectionChit?

  @@map("route_stops")
}

model CollectionChit {
  id              Int      @id @default(autoincrement())
  chit_code       String   @unique
  route_stop_id   Int      @unique
  buyer_id        Int
  farmer_id       Int
  total_weight    Float    @default(0)
  collection_date DateTime
  location_lat    Float?
  location_lng    Float?
  is_priced       Boolean  @default(false)
  created_at      DateTime @default(now())

  // Relations
  route_stop        RouteStop         @relation(fields: [route_stop_id], references: [id], onDelete: Cascade)
  buyer             User              @relation("BuyerChits", fields: [buyer_id], references: [id], onDelete: Cascade)
  farmer            User              @relation("FarmerChits", fields: [farmer_id], references: [id], onDelete: Cascade)
  collection_items  CollectionItem[]

  @@map("collection_chits")
}

model CollectionItem {
  id             Int    @id @default(autoincrement())
  chit_id        Int
  vegetable_name String
  weight         Float

  // Relations
  chit CollectionChit @relation(fields: [chit_id], references: [id], onDelete: Cascade)

  @@map("collection_items")
}

model DailyPrice {
  id             Int      @id @default(autoincrement())
  date           DateTime
  vegetable_name String
  price_per_kg   Float
  created_at     DateTime @default(now())

  @@unique([date, vegetable_name])
  @@map("daily_prices")
}

model Invoice {
  id             Int           @id @default(autoincrement())
  invoice_number String        @unique
  buyer_id       Int
  farmer_id      Int
  date           DateTime
  line_items     Json?
  grand_total    Float         @default(0)
  status         InvoiceStatus @default(PENDING)
  pdf_url        String?
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt

  // Relations
  buyer    User      @relation("BuyerInvoices", fields: [buyer_id], references: [id], onDelete: Cascade)
  farmer   User      @relation("FarmerInvoices", fields: [farmer_id], references: [id], onDelete: Cascade)
  payments Payment[]

  @@map("invoices")
}

model Payment {
  id              Int         @id @default(autoincrement())
  invoice_id      Int?
  buyer_id        Int
  farmer_id       Int
  amount          Float
  mode            PaymentMode
  transaction_ref String?
  payment_date    DateTime
  created_at      DateTime    @default(now())

  // Relations
  invoice Invoice? @relation(fields: [invoice_id], references: [id], onDelete: SetNull)
  buyer   User     @relation("BuyerPayments", fields: [buyer_id], references: [id], onDelete: Cascade)
  farmer  User     @relation("FarmerPayments", fields: [farmer_id], references: [id], onDelete: Cascade)

  @@map("payments")
}

model SystemConfig {
  id                     Int      @id @default(autoincrement())
  delivery_rate_per_km   Float    @default(15.0)
  farmer_commission_rate Float    @default(0.01)
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt

  @@map("system_config")
}

model SellingPrice {
  id                   Int      @id @default(autoincrement())
  date                 DateTime
  vegetable_name       String
  selling_price_per_kg Float
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt

  @@unique([date, vegetable_name])
  @@map("selling_prices")
}

model VegetableRequest {
  id              Int              @id @default(autoincrement())
  vegetable_name  String
  requested_by    Int
  status          VegetableStatus  @default(PENDING)
  admin_notes     String?
  created_at      DateTime         @default(now())
  updated_at      DateTime         @updatedAt

  // Relations
  farmer User @relation("VegetableRequests", fields: [requested_by], references: [id], onDelete: Cascade)

  @@map("vegetable_requests")
}

